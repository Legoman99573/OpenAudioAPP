<?xml version='1.0' encoding='utf-8'?>
<widget id="nl.mcpark.openaudioapp" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>OpenAudioAPP</name>
    <description>
        The openaudio client for your phone!
    </description>
    <author email="melerpe.habbozz@live.nl" href="http://mcpark.nl">
        Openaudo Team
    </author>
    <content src="main.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <plugin name="cordova-plugin-console" source="npm" spec="~1.0.3" />
    <plugin name="cordova-plugin-dialogs" source="npm" spec="~1.2.1" />
    <plugin name="cordova-plugin-whitelist" source="npm" spec="~1.2.1" />
    <platform name="android">
        <icon src="www/res/icon/logo.png" />
    </platform>
    <platform name="ios">
        <icon src="www/res/icon/logo.png" />
    </platform>
    <platform name="wp8">
        <icon src="www/res/icon/logo.png" />
    </platform>
    <platform name="windows">
        <icon src="www/res/icon/logo.png" />
    </platform>
    <access origin="*" />
    <allow-navigation href="*" />
    <access origin="craftmend.com*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="phonegap-plugin-barcodescanner" spec="~6.0.5" />
    <plugin name="cordova-plugin-nativeaudio" spec="~3.0.8" />
</widget>
